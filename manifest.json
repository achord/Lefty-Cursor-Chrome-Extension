{
  "manifest_version": 2,

  "name": "Lefty Cursor",
  "description": "Change the default pointer cursor to a lefty.",
  "version": "1.0",  
  "icons": {
    "16":  "icon-16.png",
    "48":  "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    "pointer-left-16.png",
    "hand-left-16.png",
    "grab-left-16.png"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Lefty Cursor"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}